{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "rootDir": "src/",
    "paths": {
      "modules": [
        "./modules"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts", "./src/utils/[^_]*.ts", "./src/services/[^_]*.ts", "./src/client/[^_]*.ts", "./src/types/[^_]*.ts"],
    "entryPointStrategy": "expand",
    "out": "./docs",
  }
}